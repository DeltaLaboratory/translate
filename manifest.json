{
  "manifest_version":3,
  "name":"Translator",
  "description":"Translate Conveniently",
  "version":"1.0",
  "action":{
    "default_popup":"index.html",
    "default_icon":{
      "16":"icon.png",
      "24":"icon.png",
      "32":"icon.png"
    }
  },
  "icons":{
    "16":"icon.png",
    "24":"icon.png",
    "32":"icon.png",
    "48":"icon.png",
    "128":"icon.png"
  },
  "permissions":[
    "storage",
    "declarativeNetRequest",
    "contextMenus",
    "scripting"
  ],
  "host_permissions":[
    "<all_urls>"
  ],
  "content_scripts":[
    {
      "matches":[
        "*://*.youtube.com/*"
      ],
      "run_at":"document_end",
      "js":[
        "src/sites/youtube.ts"
      ]
    },
    {
      "matches":[
        "*://*.pixiv.net/*"
      ],
      "run_at":"document_end",
      "js":[
        "src/sites/pixiv.ts"
      ]
    },
    {
      "matches":[
        "<all_urls>"
      ],
      "run_at":"document_start",
      "js":[
        "src/page_helper.ts"
      ]
    }
  ],
  "background":{
    "service_worker":"src/background.ts"
  },
  "web_accessible_resources":[
    {
      "resources":[
        "/icon/*",
        "/fonts/*"
      ],
      "matches":[
        "<all_urls>"
      ]
    }
  ],
  "default_locale":"ko"
}